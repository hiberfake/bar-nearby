<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="toolbarInsetStart">@dimen/toolbar_inset_start</item>
    </style>

    <style name="Theme" parent="Theme.Base" />

    <style name="Theme.Home" />

    <style name="Theme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Locality">
        <item name="android:windowBackground">@color/grey_200</item>
    </style>

    <style name="TextAppearance.CollapsingToolbar.Expanded" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
    </style>

</resources>